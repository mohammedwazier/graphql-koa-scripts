{
  "env": {
    "commonjs": true,
    "es6": true,
    "node": true
  },
  "extends": ["airbnb-base", "plugin:jest/recommended", "plugin:prettier/recommended"],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly",
    "fetch": "readonly",
    "yup": "readonly",
    "moment": "readonly",
    "sdk": "readonly",
    "bluebird": "readonly",
    "faker": "readonly",
    "flaverr": "readonly",
    "graphqlPubSub": "readonly"
  },
  "parserOptions": {
    "ecmaVersion": 2018
  },
  "plugins": ["jest"],
  "rules": {
    "camelcase": "off",
    "no-console": "warn",
    "no-trailing-spaces": "off",
    "global-require": "off",
    "padded-blocks": "off",
    "no-unused-vars": "off",
    "jest/expect-expect": "off",
    "no-param-reassign": ["error", { "props": false }],
    "radix": "warn",
    "max-len": ["error", 100],
    "prettier/prettier": ["error"]
  }
}
